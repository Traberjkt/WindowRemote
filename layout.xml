<?xml version="1.0" encoding="utf-8"?>
<layout>
	<tabs>
		<tab text="Window Remote">
			<row weight="0.5">
				<button text="Next Window" ontap="nextwindow"/>
				<button text="Previous Window" ontap="previouswindow"/>
			</row>
			<row weight="0.5">
				<button text="Cycle Windows" ontap="cs"/>
			</row>
			<row weight="0.5">
				<button text="Maximize Window" ontap="maximize"/>
				<button icon="docclose" ontap="close"/>
				<button text="Minimize Window" ontap="minimize"/>
			</row>
			<row weight="0.5">
				<button text="New Virtual Desktop" ontap="nvd"/>
				<button text="Close Virtual Desktop" ontap="cvd"/>
			</row>\\\\
			<row weight="0.5">
				<button icon="arrowleft" ontap="dl"/>
				<button icon="arrowright" ontap="dr"/>
			</row>
			<row weight="0.5">
				<button text="Window Select" ontap="ws"/>
			</row>
			<row weight="0.5">
				<button icon="arrowup" ontap="scrollup"/>
				<button icon="arrowdown" ontap="scrolldown"/>
			</row>
			<row>
				<button icon="window" ontap="desktop"/>
			</row>
		</tab>
	</tabs>
</layout>
